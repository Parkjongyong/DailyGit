	<!-- ========================= CodeSource DEFINITIONS ======================== -->
	<bean id="codeSourceAccessor"
		class="com.ecbank.framework.resourcebundle.code.CodeSourceAccessor">
		<constructor-arg ref="codeSource" />
	</bean>

	<bean id="codeSource"
		class="com.ecbank.framework.resourcebundle.code.ReloadableResourceBundleCodeSource">
		<property name="basenames">
			<list>
				<value>classpath:/META-INF/codes/code</value>
			</list>
		</property>
		<property name="cacheSeconds" value="5" />
